<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>mm-fy ÊÑüÊÉÖÂàÜÊûê„Ç∞„É©„Éï - Sentiment Analysis</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }
        .container {
            max-width: 1400px;
            margin: 0 auto;
        }
        h1 {
            color: white;
            text-align: center;
            margin-bottom: 30px;
            font-size: 2.5em;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }
        .back-link {
            display: inline-block;
            color: white;
            text-decoration: none;
            margin-bottom: 20px;
            padding: 10px 20px;
            background: rgba(255,255,255,0.2);
            border-radius: 8px;
            font-weight: bold;
        }
        .back-link:hover {
            background: rgba(255,255,255,0.3);
        }
        .controls {
            background: white;
            padding: 20px;
            border-radius: 15px;
            margin-bottom: 20px;
            box-shadow: 0 8px 32px rgba(0,0,0,0.2);
            display: flex;
            align-items: center;
            gap: 15px;
            flex-wrap: wrap;
        }
        .controls label {
            font-weight: bold;
            color: #333;
        }
        .controls input, .controls select {
            padding: 10px 15px;
            border: 2px solid #ddd;
            border-radius: 8px;
            font-size: 14px;
        }
        .controls input:focus, .controls select:focus {
            outline: none;
            border-color: #667eea;
        }
        .controls button {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            padding: 10px 25px;
            border-radius: 8px;
            cursor: pointer;
            font-size: 14px;
            font-weight: bold;
            transition: all 0.3s;
        }
        .controls button:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
        }
        .loading {
            background: white;
            padding: 60px;
            border-radius: 15px;
            text-align: center;
            font-size: 20px;
            color: #666;
            box-shadow: 0 8px 32px rgba(0,0,0,0.2);
        }
        .error {
            background: #f8d7da;
            color: #721c24;
            padding: 20px;
            border-radius: 15px;
            border: 2px solid #f5c6cb;
            box-shadow: 0 8px 32px rgba(0,0,0,0.2);
        }
        .stats {
            background: white;
            padding: 20px;
            border-radius: 15px;
            margin-bottom: 20px;
            box-shadow: 0 8px 32px rgba(0,0,0,0.2);
        }
        .stats h2 {
            color: #333;
            margin-bottom: 15px;
        }
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 15px;
        }
        .stat-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 20px;
            border-radius: 12px;
            text-align: center;
        }
        .stat-card h3 {
            font-size: 14px;
            opacity: 0.9;
            margin-bottom: 8px;
        }
        .stat-card p {
            font-size: 28px;
            font-weight: bold;
        }
        .chart-container {
            background: white;
            padding: 30px;
            border-radius: 15px;
            margin-bottom: 20px;
            box-shadow: 0 8px 32px rgba(0,0,0,0.2);
        }
        .chart-container h2 {
            color: #333;
            margin-bottom: 20px;
            font-size: 1.5em;
        }
        .chart-wrapper {
            position: relative;
            height: 450px;
        }
        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(500px, 1fr));
            gap: 20px;
            margin-bottom: 20px;
        }
        @media (max-width: 768px) {
            .grid {
                grid-template-columns: 1fr;
            }
            h1 { font-size: 1.8em; }
        }
    </style>
</head>
<body>
    <div class="container">
        <a href="/index.php" class="back-link">‚Üê Back to Dashboard</a>

        <h1>üìä mm-fy ÊÑüÊÉÖÂàÜÊûê„Ç∞„É©„Éï<br>Sentiment Analysis Dashboard</h1>

        <div class="controls">
            <label for="patientId">Patient ID:</label>
            <input type="number" id="patientId" placeholder="Optional" min="1">

            <button onclick="loadData()">üì• Load Data</button>
            <button onclick="loadAllData()">üìä Load All</button>

            <label for="chartType">Chart Type:</label>
            <select id="chartType" onchange="updateChartType()">
                <option value="radar">Radar Chart</option>
                <option value="bar">Bar Chart</option>
                <option value="line">Line Chart</option>
                <option value="polarArea">Polar Area</option>
            </select>
        </div>

        <div id="loading" class="loading">
            <div>‚è≥ Loading data...</div>
        </div>

        <div id="error" class="error" style="display: none;"></div>

        <div id="stats" class="stats" style="display: none;">
            <h2>üìà Áµ±Ë®àÊÉÖÂ†± / Statistics</h2>
            <div class="stats-grid">
                <div class="stat-card">
                    <h3>Total Records</h3>
                    <p id="totalRecords">0</p>
                </div>
                <div class="stat-card" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                    <h3>Avg A Score</h3>
                    <p id="avgA">0</p>
                </div>
                <div class="stat-card" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
                    <h3>Avg B Score</h3>
                    <p id="avgB">0</p>
                </div>
                <div class="stat-card" style="background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);">
                    <h3>Avg C Score</h3>
                    <p id="avgC">0</p>
                </div>
            </div>
        </div>

        <div class="grid" id="chartsGrid" style="display: none;">
            <div class="chart-container">
                <h2>üéØ A-D „Çπ„Ç≥„Ç¢ / A-D Scores</h2>
                <div class="chart-wrapper">
                    <canvas id="adChart"></canvas>
                </div>
            </div>

            <div class="chart-container">
                <h2>üìä H-M „Çπ„Ç≥„Ç¢ / H-M Scores</h2>
                <div class="chart-wrapper">
                    <canvas id="hmChart"></canvas>
                </div>
            </div>
        </div>

        <div class="chart-container" id="allScoresContainer" style="display: none;">
            <h2>üìà ÂÖ®„Çπ„Ç≥„Ç¢ÊØîËºÉ / All Scores Comparison (A-M)</h2>
            <div class="chart-wrapper">
                <canvas id="allScoresChart"></canvas>
            </div>
        </div>
    </div>

    <script>
        let adChart, hmChart, allScoresChart;
        let currentData = [];
        let currentChartType = 'radar';

        const SCORE_LABELS = ['A', 'B', 'C', 'D', 'H', 'I', 'J', 'K', 'L', 'M'];
        const COLORS = {
            A: 'rgba(255, 99, 132, 0.6)',
            B: 'rgba(54, 162, 235, 0.6)',
            C: 'rgba(255, 206, 86, 0.6)',
            D: 'rgba(75, 192, 192, 0.6)',
            H: 'rgba(153, 102, 255, 0.6)',
            I: 'rgba(255, 159, 64, 0.6)',
            J: 'rgba(199, 199, 199, 0.6)',
            K: 'rgba(83, 211, 87, 0.6)',
            L: 'rgba(237, 76, 120, 0.6)',
            M: 'rgba(100, 181, 246, 0.6)'
        };

        // Get patient_id from URL
        const urlParams = new URLSearchParams(window.location.search);
        const defaultPatientId = urlParams.get('patient_id');
        if (defaultPatientId) {
            document.getElementById('patientId').value = defaultPatientId;
        }

        function updateChartType() {
            currentChartType = document.getElementById('chartType').value;
            if (currentData.length > 0) {
                updateCharts(currentData);
            }
        }

        async function loadData() {
            const patientId = document.getElementById('patientId').value;
            const url = patientId 
                ? `/api/japanese_fy_results.php?patient_id=${patientId}`
                : '/api/japanese_fy_results.php';

            document.getElementById('loading').style.display = 'block';
            document.getElementById('error').style.display = 'none';
            document.getElementById('stats').style.display = 'none';
            document.getElementById('chartsGrid').style.display = 'none';
            document.getElementById('allScoresContainer').style.display = 'none';

            try {
                const response = await fetch(url);
                const result = await response.json();

                document.getElementById('loading').style.display = 'none';

                if (result.success && result.data && result.data.length > 0) {
                    currentData = result.data;
                    updateCharts(result.data);
                    updateStats(result.data);
                    document.getElementById('stats').style.display = 'block';
                    document.getElementById('chartsGrid').style.display = 'grid';
                    document.getElementById('allScoresContainer').style.display = 'block';
                } else {
                    showError(patientId 
                        ? `No data found for Patient ID ${patientId}`
                        : 'No data found in database');
                }
            } catch (error) {
                document.getElementById('loading').style.display = 'none';
                showError('Error loading data: ' + error.message);
            }
        }

        async function loadAllData() {
            document.getElementById('patientId').value = '';
            loadData();
        }

        function showError(message) {
            document.getElementById('error').style.display = 'block';
            document.getElementById('error').innerHTML = '<strong>Error:</strong> ' + message;
        }

        function updateStats(data) {
            document.getElementById('totalRecords').textContent = data.length;

            const avgA = data.reduce((sum, d) => sum + parseFloat(d.A_score || 0), 0) / data.length;
            const avgB = data.reduce((sum, d) => sum + parseFloat(d.B_score || 0), 0) / data.length;
            const avgC = data.reduce((sum, d) => sum + parseFloat(d.C_score || 0), 0) / data.length;

            document.getElementById('avgA').textContent = avgA.toFixed(3);
            document.getElementById('avgB').textContent = avgB.toFixed(3);
            document.getElementById('avgC').textContent = avgC.toFixed(3);
        }

        function updateCharts(data) {
            const latestData = data[0];

            if (adChart) adChart.destroy();
            if (hmChart) hmChart.destroy();
            if (allScoresChart) allScoresChart.destroy();

            // A-D Chart
            adChart = new Chart(document.getElementById('adChart'), {
                type: currentChartType,
                data: {
                    labels: ['A', 'B', 'C', 'D'],
                    datasets: [{
                        label: 'A-D Scores',
                        data: [
                            parseFloat(latestData.A_score || 0),
                            parseFloat(latestData.B_score || 0),
                            parseFloat(latestData.C_score || 0),
                            parseFloat(latestData.D_score || 0)
                        ],
                        backgroundColor: ['A', 'B', 'C', 'D'].map(l => COLORS[l]),
                        borderColor: ['A', 'B', 'C', 'D'].map(l => COLORS[l].replace('0.6', '1')),
                        borderWidth: 2
                    }]
                },
                options: getChartOptions()
            });

            // H-M Chart
            hmChart = new Chart(document.getElementById('hmChart'), {
                type: currentChartType,
                data: {
                    labels: ['H', 'I', 'J', 'K', 'L', 'M'],
                    datasets: [{
                        label: 'H-M Scores',
                        data: [
                            parseFloat(latestData.H_score || 0),
                            parseFloat(latestData.I_score || 0),
                            parseFloat(latestData.J_score || 0),
                            parseFloat(latestData.K_score || 0),
                            parseFloat(latestData.L_score || 0),
                            parseFloat(latestData.M_score || 0)
                        ],
                        backgroundColor: ['H', 'I', 'J', 'K', 'L', 'M'].map(l => COLORS[l]),
                        borderColor: ['H', 'I', 'J', 'K', 'L', 'M'].map(l => COLORS[l].replace('0.6', '1')),
                        borderWidth: 2
                    }]
                },
                options: getChartOptions()
            });

            // All Scores Chart
            allScoresChart = new Chart(document.getElementById('allScoresChart'), {
                type: 'bar',
                data: {
                    labels: SCORE_LABELS,
                    datasets: [{
                        label: 'All Scores (A-M)',
                        data: SCORE_LABELS.map(label => 
                            parseFloat(latestData[`${label}_score`] || 0)
                        ),
                        backgroundColor: SCORE_LABELS.map(l => COLORS[l]),
                        borderColor: SCORE_LABELS.map(l => COLORS[l].replace('0.6', '1')),
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: { 
                            beginAtZero: true, 
                            max: 1.0,
                            ticks: {
                                callback: value => value.toFixed(2)
                            }
                        }
                    },
                    plugins: {
                        tooltip: {
                            callbacks: {
                                label: context => {
                                    return `${context.label}: ${context.parsed.y.toFixed(4)}`;
                                }
                            }
                        }
                    }
                }
            });
        }

        function getChartOptions() {
            const baseOptions = {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    tooltip: {
                        callbacks: {
                            label: context => {
                                const value = currentChartType === 'radar' || currentChartType === 'polarArea'
                                    ? context.parsed.r
                                    : context.parsed.y;
                                return `${context.label}: ${value?.toFixed(4) || 0}`;
                            }
                        }
                    }
                }
            };

            if (currentChartType === 'radar' || currentChartType === 'polarArea') {
                baseOptions.scales = {
                    r: { 
                        beginAtZero: true, 
                        max: 1.0,
                        ticks: {
                            callback: value => value.toFixed(2)
                        }
                    }
                };
            } else {
                baseOptions.scales = {
                    y: { 
                        beginAtZero: true, 
                        max: 1.0,
                        ticks: {
                            callback: value => value.toFixed(2)
                        }
                    }
                };
            }

            return baseOptions;
        }

        // Auto-load data on page load
        window.addEventListener('load', () => {
            loadData();
        });
    </script>
</body>
</html>
