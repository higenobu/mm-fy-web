    <script>
        let chart = null;
        let data = [];

        const urlParams = new URLSearchParams(window.location.search);
        const defaultPatientId = urlParams.get('patient_id') || 2;
        document.getElementById('patientId').value = defaultPatientId;

        // Update nav buttons with current patient_id
        function updateNavButtons() {
            const patientId = document.getElementById('patientId').value;
            document.querySelectorAll('.nav-button').forEach(btn => {
                if (btn.href && btn.href.includes('?')) {
                    const url = new URL(btn.href);
                    url.searchParams.set('patient_id', patientId);
                    btn.href = url.toString();
                }
            });
        }

// Add at the beginning of your loadData function

async function loadData() {
    try {
        showLoading(true);
        
        // ‚úÖ SECURITY: Don't send patient_id, let backend use session
        // const patientId = getPatientIdFromURL();  // ‚ùå OLD WAY
        
        // ‚úÖ NEW: Backend will automatically use logged-in user's patient_id
        const response = await fetch('/api/japanese_fy_results.php');
        
        if (response.status === 401) {
            // Not authenticated, redirect to login
            window.location.href = '/login.php';
            return;
        }
        
        if (response.status === 403) {
            throw new Error('Access denied to patient records');
        }
        
        if (!response.ok) {
            throw new Error(`HTTP error! status: ${response.status}`);
        }
        
        const result = await response.json();
        
        if (!result.success) {
            throw new Error(result.error || 'Failed to load data');
        }
        
        // Display which patient(s) data is shown
        const patientInfo = document.getElementById('patient-info');
        if (patientInfo) {
            patientInfo.textContent = `Showing data for: ${result.accessible_patients.join(', ')}`;
        }
        
        // Rest of your code...
        processData(result.data);
        
    } catch (error) {
        console.error('Error loading data:', error);
        showError(error.message);
    } finally {
        showLoading(false);
    }
}
 //   
        function showStats(data) {
            const stats = document.getElementById('stats');
            const avgA = (data.reduce((sum, d) => sum + parseFloat(d.a_score), 0) / data.length).toFixed(3);
            const avgB = (data.reduce((sum, d) => sum + parseFloat(d.b_score), 0) / data.length).toFixed(3);
            
            stats.innerHTML = `
                <div class="stat-card">
                    <h3>Total Records</h3>
                    <div class="value">${data.length}</div>
                </div>
                <div class="stat-card">
                    <h3>Avg A Score</h3>
                    <div class="value">${avgA}</div>
                </div>
                <div class="stat-card">
                    <h3>Avg B Score</h3>
                    <div class="value">${avgB}</div>
                </div>
            `;
        }

        function drawChart(data) {
            const sorted = [...data].sort((a, b) => new Date(a.created_at) - new Date(b.created_at));
            const labels = sorted.map(d => new Date(d.created_at).toLocaleDateString());
            
            const datasets = [
                {
                    label: 'A Score',
                    data: sorted.map(d => parseFloat(d.a_score)),
                    borderColor: '#FF6384',
                    tension: 0.4
                },
                {
                    label: 'B Score',
                    data: sorted.map(d => parseFloat(d.b_score)),
                    borderColor: '#36A2EB',
                    tension: 0.4
                },
                {
                    label: 'C Score',
                    data: sorted.map(d => parseFloat(d.c_score)),
                    borderColor: '#FFCE56',
                    tension: 0.4
                }
            ];

            if (chart) chart.destroy();

            chart = new Chart(document.getElementById('chart'), {
                type: 'line',
                data: { labels, datasets },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: { beginAtZero: true, max: 1 }
                    }
                }
            });
        }

        function exportCSV() {
            if (data.length === 0) {
                alert('No data to export');
                return;
            }
            let csv = 'Date,Text,A,B,C,D,H\n';
            data.forEach(d => {
                csv += `${d.created_at},"${d.text}",${d.a_score},${d.b_score},${d.c_score},${d.d_score},${d.h_score}\n`;
            });
            const blob = new Blob([csv], { type: 'text/csv' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `sentiment_${Date.now()}.csv`;
            a.click();
        }

        window.addEventListener('load', () => {
            updateNavButtons();
            loadData();
        });
    </script>
